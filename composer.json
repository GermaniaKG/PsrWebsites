        "psr/http-message": "^1.0",
        "psr/container": "^1.0",
        "nyholm/psr7": "^1.4"
    },

    "require-dev": {
        "slim/slim": "^3.5",
        "phpunit/phpunit": "^9.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "php-coveralls/php-coveralls": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "spatie/phpunit-watcher": "^1.0",
        "phpstan/phpstan": "^0.12"
    },

    "scripts": {
        "phpunit": "phpunit --colors=auto",

        "test": [
            "@phpunit"
        ]
    }

