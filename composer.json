{
    "name": "germania-kg/psr-websites",

    "type": "library",
    "license": "MIT",

    "authors": [{
        "name": "Carsten Witt",
        "email": "admin@germania-kg.com",
        "role": "Developer"
    }],

    "autoload": {
        "psr-4": {
            "Germania\\PsrWebsites\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/default"
        }
    },

    "require": {
        "php": "^5.6|^7.0|^8.0",
        "germania-kg/websites": "^3.1|^4.0",
